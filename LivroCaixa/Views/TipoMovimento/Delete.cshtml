@model LivroCaixa.Models.TipoMovimento

@{
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Excluir</title>
</head>
<body>
    <h3>Confirma Exclusão deste Tipo de Movimento?</h3>
    <div>
        <h4>Tipo de Movimento</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.descricao)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.descricao)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.receitadespesa)
            </dt>
    
            <dd>
                @if (Model.receitadespesa == "R")
                {
                    @Html.Display("Receita")
                }
                @if (Model.receitadespesa == "D")
                { 
                    @Html.Display("Despesa")
                }

            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</body>
</html>
