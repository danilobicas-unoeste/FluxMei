@model IEnumerable<LivroCaixa.Models.TipoMovimento>

@{
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

<h2>Tipos de Movimento</h2>
<body>
    <p>
        @Html.ActionLink("Cadastrar um Novo Tipo", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.receitadespesa)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.receitadespesa)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { id=item.tipoid }) |
                @Html.ActionLink("Visualizar", "Details", new { id=item.tipoid }) |
                @Html.ActionLink("Excluir", "Delete", new { id=item.tipoid })
            </td>
        </tr>
    }
    
    </table>